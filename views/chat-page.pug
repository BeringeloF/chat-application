
mixin notificationCard(img, name, msgNum, msg)
 .notification-card
      .user-photo
        img(src=`/img/users/${img}` alt="User Photo")
      .notification-content
        .user-info
          p.user-name= name
          p.message-count #{msgNum} mensagens
        p.last-message-preview= msg

